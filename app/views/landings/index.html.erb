<form role="form" class="form-horizontal">

  <div class="form-group">
    <label class="control-label col-sm-2" for="exampleInputEmail1">client</label>
    <div class="col-sm-6">
      <select class="form-control" id="select_client">
        <% @clients.each do |c| %>
          <option value="<%= c.id %>"><%= c.name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="exampleInputEmail1">site</label>
    <div class="col-sm-6">
      <select class="form-control" id="select_site">
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="exampleInputEmail1">mission</label>
    <div class="col-sm-6">
      <select class="form-control" id="select_mission">
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="exampleInputEmail1">date</label>
    <div class="col-sm-6">
      <input type="date" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="exampleInputPassword1">Nombre d'heure</label>
    <div class="col-sm-6">
      <input type="number" class="form-control" id="exampleInputPassword1" placeholder="Password" min="0" step="any">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="exampleInputEmail1">panier</label>
    <div class="col-sm-6">
      <select class="form-control">
        <option>1</option>
        <option>2</option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="exampleInputEmail1">zone</label>
    <div class="col-sm-6">
      <select class="form-control">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="exampleInputPassword1">Commentaire</label>
    <div class="col-sm-6">
      <textarea class="form-control" rows="3"></textarea>
    </div>
  </div>

  <div class="col-sm-offset-2 col-sm-10">
    <button type="submit" class="btn btn-default">Submit</button>
  </div>
</form>
